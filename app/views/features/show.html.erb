<% title @feature.name %>

<ul>
  <li>
    EST <%= @feature.est %>H
  </li>
  <% unless @feature.source_url.blank? %>
    <li>
      Source at <%= auto_link(@feature.source_url) %>
    </li>
  <% end %>

  <% unless @feature.demo_url.blank? %>
    <li>
      Demo at <%= link_to @feature.demo_url, @feature.demo_url %>
    </li>
  <% end %>
</ul>

<% unless @feature.feature.blank? %>
  <pre class="code"><%= @feature.feature %></pre>
<% end %>

<% unless @feature.description.blank? %>
  <p><%= markup(@feature.description) %></p>
<% end %>

<hr />

<% if can?(:approve_feature, @feature) %>
  <% if @feature.approved? %>
    <%= link_to('Unapprove!', unapprove_feature_path(@feature), :confirm => "Are you sure?", :method => :put) %>
  <% else %>
    <%= link_to('Approve!', approve_feature_path(@feature), :confirm => "Are you sure?", :method => :put) %>
  <% end %>
<% end %>

<% if can?(:update, @feature) %>
  <%= link_to 'Edit', edit_feature_path(@feature)  %>
<% end %>
<%= link_to 'Back', :back %>

